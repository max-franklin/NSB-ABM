;MAKE NEW CARIBOU POPULATION
to new-caribou
  reset-ticks
  create-caribou 0;caribou-population-hunter-nls
  [
    set color white
    set size 1.25
    let done false
    let x 0
    let y 0
    while [done != true]
    [
       set x random-xcor
       set y random-ycor
       ask patch-at x y
       [
         if (patch x y != nobody)
         [
           set done true
         ]
       ]
    ]
    setxy x y
  ]
end
