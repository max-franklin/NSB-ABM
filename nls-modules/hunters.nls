;RANDOM WALK
to random-walk
  rt random-float 360
  let done false
  if (patch-ahead 1 != nobody)
  [
    set done true
  ]
  ifelse done = true
  [fd 1]
  [random-walk]
end

;STRAIGHT WALK
to straight-walk
  let right-turn random-float 5
  let left-turn random-float 5
  make-turn right-turn left-turn
  let done false
  if (patch-ahead 1 != nobody)
  [
    set done true
  ]
  ifelse done = true
  [fd 1]
  [straight-walk]
end

;MAKE TURN
; turn right or left based on the larger turn angle
to make-turn [rturn lturn]  ; turtle procedure
  ifelse rturn > lturn
  [ rt rturn ]
  [ lt lturn ]
end

to go-hunters
     ifelse ( ticks mod 4 = 0 )
     [ random-walk ]
     [ straight-walk ]
     spend-trip-length
end

to go-caribou-hunter-nls
